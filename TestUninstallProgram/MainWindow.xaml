<Window x:Class="TestUninstallProgram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
   <Grid  Background="Gray">
      <Grid.RowDefinitions>
         <RowDefinition Height="*"></RowDefinition>
         <RowDefinition Height="*"></RowDefinition>
         <RowDefinition Height="*"></RowDefinition>
      </Grid.RowDefinitions>
      <TextBox Name="ProductName" Grid.Row="0" Margin="5">Template Editor</TextBox>
      <TextBlock Name="ProductCode" Grid.Row="1" Margin="5"></TextBlock>
      <Button Grid.Row="2" Margin="10" Click="Button_Click">Uninstall</Button>
   </Grid>
</Window>
